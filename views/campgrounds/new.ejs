<% layout('layouts/boilerplate') %>

    <div class="container d-flex flex-column justify-content-center position-relative mt-3 py-3"
        style="width: 40vw; height: auto;">
        <div class="card shadow" style="width: 110%;">
            <div class="card-body">
                <h4 class="card-title text-center" style="font-family: monospace;">New Campground</h4>
                <form action="/campgrounds" method="POST" class="needs-validation" enctype="multipart/form-data"
                    novalidate>
                    <div class="form-group mb-2">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" id="title" placeholder="Title" name="campground[title]"
                            required>
                        <div class="valid-feedback">
                            Looks Great!
                        </div>
                        <div class="invalid-feedback">
                            Please make a title to campground.
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <label for="location">Location</label>
                        <input type="text" class="form-control" id="location" placeholder="Location"
                            name="campground[location]" required>
                        <div class="valid-feedback">
                            Looks Great!
                        </div>
                        <div class="invalid-feedback">
                            Please enter the location of campground.
                        </div>
                    </div>


                    <div class="input-group mb-3 custom-file">
                        <input type="file" class="form-control" id="image" name="image" multiple required>
                        <!-- This attribute 'multiple' is to allow to add multiple files -->
                        <label for="image" class="custom-file-label form-control"></label>
                    </div>


                    <label for="price">Price</label>
                    <div class="input-group mb-3">

                        <div class="input-group-prepend">
                            <span class="input-group-text">$</span>
                        </div>
                        <input type="number" class="form-control" aria-label="Amount (to the nearest dollar)" id="price"
                            name="campground[price]" required>
                        <div class="valid-feedback">
                            Looks Great!
                        </div>
                        <div class="invalid-feedback">
                            Please enter price.
                        </div>
                        <!-- <div class="input-group-append">
                    <span class="input-group-text">.00</span>
                </div> -->
                    </div>

                    <div class="form-group mb-2">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" rows="3" name="campground[description]"
                            required></textarea>
                        <div class="valid-feedback">
                            Looks Great!
                        </div>
                        <div class="invalid-feedback">
                            Please leave a review.
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success mt-2"
                        style="width: 80%; position: relative; left: 10%;">Add new CampGround</button>
                </form>
            </div>
        </div>
    </div>